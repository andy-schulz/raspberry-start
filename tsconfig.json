{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "mods",
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": false,
    "allowJs": true
  },
  "include": [
    "./mods"
  ],
  "exclude": [
    //    "node_modules/@types/jasmine/*"
    "node_modules",
    "**/*.spec.ts"
  ]
}